# =============================================================================
# APPLICATION TRACKER ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Environment
APP_ENV=dev
APP_SECRET=change_this_secret_key_in_production_64_chars_minimum_length
APP_DEBUG=true

# Docker Build Configuration
BUILD_TARGET=development
SOURCE_PATH=.
VOLUME_MODE=rw

# Docker Networking
NGINX_PORT=8000
NGINX_VOLUME_MODE=rw
NGINX_CONFIG=default

# Data Storage
HOST_DATA_PATH=./data
BACKUP_PATH=./data/backups
DATA_FILE_PATH=data/applications.xlsx

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=daily

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, create .env with these values:
#
# APP_ENV=prod
# APP_DEBUG=false
# BUILD_TARGET=production
# SOURCE_PATH=/var/www/app
# VOLUME_MODE=ro
# NGINX_PORT=80
# NGINX_VOLUME_MODE=ro
# NGINX_CONFIG=production
# HOST_DATA_PATH=/var/data
# BACKUP_PATH=/var/backups
# BACKUP_ENABLED=true